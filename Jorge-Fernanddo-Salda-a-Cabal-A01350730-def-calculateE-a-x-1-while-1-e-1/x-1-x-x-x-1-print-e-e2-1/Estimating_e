def calculateE(a):
	x = 1
	while (1):
		e = ((1/x)+1)**x
		x = x+1
		print(e)
		e2 = ((1/x)+1)**x	
		x = x+1
		if (e2-e) < a:
			break
	x = x-1
	return x


x = float(input('Please type a float number that you wat to use as accuracy to calculate e: '))
print ('The number you must take as "X" in the equation is:',(calculateE(x)))

			
